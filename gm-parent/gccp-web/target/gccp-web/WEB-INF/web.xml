        <servlet-name>ValidateCodeServlet</servlet-name>
        <servlet-class>com.mokylin.gm.servlet.ValidateCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateCodeServlet</servlet-name>
        <url-pattern>/servlet/validateCodeServlet</url-pattern>
    </servlet-mapping>

    <!--启动执行-->
